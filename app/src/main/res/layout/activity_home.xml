<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/home_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </FrameLayout>

    <android.support.v4.app.FragmentTabHost
        android:id="@+id/home_tablehost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"></android.support.v4.app.FragmentTabHost>

    <RadioGroup
        android:paddingTop="@dimen/space_xs"
        android:background="@color/colorPrimary"
        android:id="@+id/home_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <RadioButton

            android:id="@+id/rb_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawablePadding="@dimen/space_xs"
            android:drawableTop="@drawable/bg_tabbar_home_selector"
            android:gravity="center"
            android:text="@string/home"
            android:textColor="@drawable/textcolor_home_selector" />


        <RadioButton
            android:id="@+id/rb_compress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="@dimen/space_xs"
            android:drawableTop="@drawable/bg_tabbar_compass_selector"
            android:gravity="center"
            android:text="@string/xingxi"
            android:textColor="@drawable/textcolor_home_selector" />


        <RadioButton
            android:id="@+id/rb_mine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="@dimen/space_xs"
            android:drawableTop="@drawable/bg_tabbar_mini_selector"
            android:gravity="center"
            android:text="@string/wode"
            android:textColor="@drawable/textcolor_home_selector" />
    </RadioGroup>

</RelativeLayout>
